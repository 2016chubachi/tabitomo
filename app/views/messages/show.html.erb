<%= link_to(member_image_tag(@message.receiver),"#") %>
<h3><%= @message.receiver.first_name + "  " + @message.receiver.last_name%></h3>


<%= form_for(@message, html: { class: "form-horizontal"} ) do |f| %>
    <div class="form-group">
      <div class="col-sm-2">
        <%= f.label :title, class: "control-label" %>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :title, disabled: params[:action] == "show", class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-2">
        <%= f.label :content %>
      </div>
      <div class="col-sm-10">
        <%= f.text_area :content, disabled: params[:action] == "show", rows: "5", class: "form-control" %>
      </div>
    </div>
<% end %>
