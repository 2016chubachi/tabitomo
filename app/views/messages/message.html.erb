<h2 class="page-header">メッセージ詳細</h2>

<div class="row ">
  <div class="col-xs-12 col-sm-3 div-padding-top20">  <!-- ガイドの写真-->
    <div class="thumbnail"> <!-- thumbnail -->
      <img src="photo/no-image.png">
      <div class="caption"> <!-- caption -->
        <div class="text-primary">
          <h3>高橋マイク</h3>
        </div>
      </div>  <!-- caption -->
    </div> <!-- thumbnail -->
  </div>  <!-- ガイドの写真-->
  <div class="col-xs-12 col-sm-9">　<!--　画面の右側　-->
    <div class="panel panel-default"> <!--  返信フォーム -->
      <div class="panel-heading">返信</div>
      <div class="panel-body"> <!--　panel-body -->
        <form class="form-horizontal" role="form">
          <div class="form-group">
            <label for="inputTitle" class="col-sm-2 control-lable">タイトル</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="inputTitle" placeholder="Title">
            </div>
          </div>
          <div class="form-group">
            <label for="textareaQuestion" class="col-sm-2 control-lable">質問</label>
            <div class="col-sm-10">
              <textarea class="form-control" rows="10" id="textareaQuestion" placeholder="Question"></textarea>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-2">
              <button type="submit" class="btn btn-primary btn-block" id="btnSend">返信</button>
            </div>
          </div>
        </form>
      </div> <!--　panel-body -->
    </div> <!--  返信フォーム -->
    <div class="panel panel-info">
      <div class="panel-heading">受信:質問タイトル</div>
      <div class="panel-body">
        質問内容
      </div>
      <div class="panel-footer text-right">2016/09/30 15:25:35</div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">送信:質問タイトル</div>
      <div class="panel-body">
        質問内容
      </div>
      <div class="panel-footer text-right">2016/09/29 15:25:35</div>
