<!-- member 登録画面-->
<% content_for :main_header do %>
<% end %>

  <h2><%= t("member_sigup_link") %></h2>
    <div class="row">
      <div class="col-xs-12 col-sm-6">
            <table class="table table-striped table-bordered">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                          <%= devise_error_messages! %>
                        <div class="form-group">
                          <div class="field">
                            <%= f.label :last_name %><br />
                            <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
                          </div>
                        </div>

                        <div class="form-group">
                          <div class="field">
                            <%= f.label :first_name %><br />
                            <%= f.text_field :first_name, autofocus: true, class: "form-control"  %>
                          </div>
                        </div>

                        <div class="form-group">
                          <div class="field">
                            <%= f.label :email %><br />
                            <%= f.email_field :email, autofocus: true, class: "form-control"  %>
                          </div>
                        </div>

                        <div class="form-group">
                          <div class="field">
                            <%= f.label :password %>
                            <% if @minimum_password_length %>
                            <em>(<%= @minimum_password_length %> <%= t("characters_minimum") %>)</em>
                            <% end %><br />
                            <%= f.password_field :password, autocomplete: "off", class: "form-control"  %>
                          </div>
                        </div>

                        <div class="form-group">
                          <div class="field">
                            <%= f.label :password_confirmation %><br />
                            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"  %>
                          </div>
                        </div>

                        <div class="form-group">
                          <div class="field">
                            <%= f.label :country_id %><br />
                            <%= f.select :country_id, Country.all.map{|c| [ c.send("text_#{I18n.locale}"), c.id]}, class: "form-control"  %>
                          </div>
                        </div>

                        <div class="form-group">
                          <div class="field">
                            <%= f.label :guide %><br />
                            <%= f.check_box :hantei, { }, true, false %>
                          </div>
                        </div>

                <%= f.submit t("member_sigup_link"),data: { confirm: 'メンバー登録して宜しいですか。登録時に使ったメールのメールボックスにアカウントを有効にするメールが届きます。', disabled_with: '処理中...'}, class: "btn btn-primary" %>
              <% end %>
            </table>
            <%= render "devise/shared/links" %>
      </div>
    </div>
