<!-- member パスワードリセット-->
<% content_for :main_header do %>
<% end %>

<% content_for :error_messages do %>
  <!-- エラーメッセージの表示エリアをレンダリング-->
  <%= render partial: "shared/error", locals: {obj: resource} %>
<% end %>

<h2><%= t("change_password") %></h2>

  <div class="row">
    <div class="col-xs-12 col-sm-6">
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                  <%= f.hidden_field :reset_password_token %>
                <div class="form-group">
                  <div class="field">
                    <%= f.label :password, t('new_password')%>
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> <%= t("characters_minimum") %>)</em>
                    <% end %>
                    <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control" %>
                  </div>
                </div>

                <div class="form-group">
                  <div class="field">
                    <%= f.label :password_confirmation, t('confirm_password') %>
                    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
                  </div>
                </div>
                  <%= f.submit t("change_password"), class: "btn btn-primary" %><br /><br />
                  <%= render "devise/shared/links" %>
              <% end %><br>　　
　  </div>
  </div>
