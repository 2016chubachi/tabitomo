<div class="form-group">
  <div class="col-sm-2">
    <%= f.label t("activerecord.attributes.member.first_name") , class: "control-label" %>
  </div>
  <div class="col-sm-10">
    <div class="form-control" style="background-color:#eee;">
      <%= @booking.traveler.member.first_name %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-2">
    <%= f.label t("activerecord.attributes.member.last_name") , class: "control-label" %>
  </div>
  <div class="col-sm-10">
    <div class="form-control" style="background-color:#eee;">
      <%= @booking.traveler.member.last_name %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-2">
    <%= f.label t("activerecord.attributes.country.id") , class: "control-label" %>
  </div>
  <div class="col-sm-10">
    <div class="form-control" style="background-color:#eee;">
      <%= @booking.traveler.member.country.send("text_#{I18n.locale}") %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-2">
    <%= f.label t("activerecord.attributes.booking.traveler_telphone"), class: "control-label" %>
  </div>
  <div class="col-sm-10">
    <div class="form-control" style="background-color:#eee;">
      <%= @booking.traveler_telphone %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.fields_for :traveler_booking_comment do |tbc| %>
    <div class="col-sm-2">
      <%= tbc.label :comment, class: "control-label　text-left" %>
    </div>
    <div class="col-sm-10">
      <%= tbc.text_area :comment, rows: 7, readonly: true, class: "form-control" %>
    </div>
  <% end %>
</div>

<div class="form-group">
  <%= f.fields_for :guide_booking_comment do |gbc| %>
    <div class="col-sm-2">
      <%= gbc.label :comment, class: "control-label　text-left" %>
    </div>
    <div class="col-sm-10">
      <%= gbc.text_area :comment, rows: 7, readonly: true, class: "form-control" %>
    </div>
  <% end %>
</div>
