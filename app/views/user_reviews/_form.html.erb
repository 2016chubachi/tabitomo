<div class="form-group">
  <div class="col-sm-2">
    <%= f.label :star_master_id, class: "control-label" %>
  </div>
  <div class="col-sm-10">
    <% if params[:action] == "show" %>
      <% case @UserReview.star_master_id %>
      <% when 1%>
        <img src="/assets/ico_grade6_1.gif">
      <% when 2 %>
        <img src="/assets/ico_grade6_2.gif">
      <% when 3 %>
        <img src="/assets/ico_grade6_3.gif">
      <% when 4 %>
        <img src="/assets/ico_grade6_4.gif">
      <% when 5 %>
        <img src="/assets/ico_grade6_5.gif">
      <% end %>
    <% else %>
      <%= f.radio_button :star_master_id, 1,  class: "radio-inline" %>星1つ
      <%= f.radio_button :star_master_id, 2,  class: "radio-inline" %>星2つ
      <%= f.radio_button :star_master_id, 3, checked: (f.object.new_record? or  @UserReview.star_master_id == 3),class: "radio-inline" %>星3つ
      <%= f.radio_button :star_master_id, 4,  class: "radio-inline" %>星4つ
      <%= f.radio_button :star_master_id, 5,  class: "radio-inline" %>星5つ
    <% end %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-2">
    <%= f.label :title, class: "control-label" %>
  </div>
  <div class="col-sm-10">
    <%= f.text_field :title, disabled: params[:action] == "show", class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-2">
    <%= f.label :detail %>
  </div>
  <div class="col-sm-10">
    <%= f.text_area :detail, disabled: params[:action] == "show", rows: "5", class: "form-control" %>
  </div>
</div>
