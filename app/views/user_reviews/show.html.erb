<h2 class="page-header">レビュー詳細</h2>

<div class="row"> <!-- レビュー -->
  <div class="col-xs-12 col-sm-3">  <!-- ガイドの写真-->
    <div class="thumbnail"> <!-- thumbnail -->
      <img src="/assets/no-image.png">
      <div class="caption"> <!-- caption -->
        <div class="text-primary">
          <h3>
            <% if @UserReview.booking.present? %>
              <%= @UserReview.booking.guide.member.last_name + " "+ @UserReview.booking.guide.member.first_name %>
            <% end %>
          </h3>
        </div>
          <table class="table table-striped table-bordered">
            <thead>
              <tr>
                <th><%= t("activerecord.attributes.booking_schedules.traveler_date") %></th>
                <th><%= t("activerecord.attributes.booking_schedules.traveler_count") %></th>
                <th><%= t("activerecord.attributes.booking_schedules.traveler_location") %></th>
              </tr>
            </thead>
            <tbody>
            <% if @UserReview.booking.present? %>
              <% @UserReview.booking.booking_schedules.each do |i| %>
                <tr>
                  <td><%= i.traveler_date.strftime("%Y/%m/%d") %></td>
                  <td><%= i.traveler_count %></td>
                  <td><%= i.traveler_location %></td>
                </tr>
              <% end %>
            <% end %>
            </tbody>
          </table>
      </div>  <!-- caption -->
    </div> <!-- thumbnail -->
  </div>  <!-- ガイドの写真-->
  <div class="col-xs-12 col-sm-9">  <!-- レビュー入力フォーム -->
    <div class="well"> <!-- well -->
      <%= form_for(@UserReview, html: { class: "form-horizontal"} ) do |f| %>
        <div class="form-group">
          <div class="col-sm-2">
            <%= f.label :star_count, class: "control-label" %>
          </div>
          <div class="col-sm-10">
            <% case @UserReview.star_count %>
            <% when 1%>
              <img src="/assets/ico_grade6_1.gif">
            <% when 2 %>
              <img src="/assets/ico_grade6_2.gif">
            <% when 3 %>
              <img src="/assets/ico_grade6_3.gif">
            <% when 4 %>
              <img src="/assets/ico_grade6_4.gif">
            <% when 5 %>
              <img src="/assets/ico_grade6_5.gif">
            <% end %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-2">
            <%= f.label :title, class: "control-label" %>
          </div>
          <div class="col-sm-10">
            <%= f.text_field :title, disabled: true, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-2">
            <%= f.label :detail %>
          </div>
          <div class="col-sm-10">
            <%= f.text_area :detail, disabled: true, rows: "5", class: "form-control" %>
          </div>
        </div>
      <% end %>
    </div> <!-- well -->
  </div> <!-- レビュー入力フォーム -->
</div>  <!-- レビュー -->

<%= debug(params) if Rails.env.development? %>
