<h2 class="page-header">レビュー詳細</h2>

<div class="row"> <!-- レビュー -->
  <div class="col-xs-12 col-sm-3">  <!-- ガイドの写真-->
    <%= render "thumbnail" %>
  </div>  <!-- ガイドの写真-->
  <div class="col-xs-12 col-sm-9">  <!-- レビュー入力フォーム -->
    <div class="well"> <!-- well -->
      <%= form_for(@UserReview, html: { class: "form-horizontal"} ) do |f| %>
        <%= render "form", f: f %>
        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-9 text-right">
            <%= f.submit t("update_button"),class: "btn btn-primary" %>
            <%= link_to t("delete_button") ,@UserReview, method: :delete, class: "btn btn-primary",
                data: {confirm: t("delete_confirmation")} %>
          </div>
        </div>
      <% end %>
    </div> <!-- well -->
  </div> <!-- レビュー入力フォーム -->
</div>  <!-- レビュー -->

<%= debug(params) if Rails.env.development? %>
