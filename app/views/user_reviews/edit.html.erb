<h2 class="page-header">レビュー詳細</h2>

<div class="row"> <!-- レビュー -->
  <div class="col-xs-12 col-sm-3">  <!-- ガイドの写真-->
    <div class="thumbnail"> <!-- thumbnail -->
      <img src="/assets/no-image.png">
      <div class="caption"> <!-- caption -->
        <div class="text-primary">
          <h3>
            <% if @UserReview.booking.present? %>
              <%= @UserReview.booking.guide.member.last_name + " "+ @UserReview.booking.guide.member.first_name %>
            <% end %>
          </h3>
        </div>
          <table class="table table-striped table-bordered">
            <thead>
              <tr>
                <th><%= t("activerecord.attributes.booking_schedules.traveler_date") %></th>
                <th><%= t("activerecord.attributes.booking_schedules.traveler_count") %></th>
                <th><%= t("activerecord.attributes.booking_schedules.traveler_location") %></th>
              </tr>
            </thead>
            <tbody>
            <% if @UserReview.booking.present? %>
              <% @UserReview.booking.booking_schedules.each do |i| %>
                <tr>
                  <td><%= i.traveler_date.strftime("%Y/%m/%d") %></td>
                  <td><%= i.traveler_count %></td>
                  <td><%= i.traveler_location %></td>
                </tr>
              <% end %>
            <% end %>
            </tbody>
          </table>
      </div>  <!-- caption -->
    </div> <!-- thumbnail -->
  </div>  <!-- ガイドの写真-->
  <div class="col-xs-12 col-sm-9">  <!-- レビュー入力フォーム -->
    <div class="well"> <!-- well -->
      <%= form_for(@UserReview, html: { class: "form-horizontal"} ) do |f| %>
        <div class="form-group">
          <div class="col-sm-2">
            <%= f.label :star_count, class: "control-label" %>
          </div>
          <div class="col-sm-10">
            <%= f.radio_button :star_count, 1,  class: "radio-inline" %>星1つ
            <%= f.radio_button :star_count, 2,  class: "radio-inline" %>星2つ
            <%= f.radio_button :star_count, 3,  class: "radio-inline" %>星3つ
            <%= f.radio_button :star_count, 4,  class: "radio-inline" %>星4つ
            <%= f.radio_button :star_count, 5,  class: "radio-inline" %>星5つ
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-2">
            <%= f.label :title, class: "control-label" %>
          </div>
          <div class="col-sm-10">
            <%= f.text_field :title, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-2">
            <%= f.label :detail %>
          </div>
          <div class="col-sm-10">
            <%= f.text_area :detail, rows: "5", class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-9 text-right">
            <%= f.submit "更新",class: "btn btn-primary" %>
            <%= link_to "削除" ,@UserReview, method: :delete, class: "btn btn-primary",
                data: {confirm: "本当に削除しますか？"} %>
          </div>
        </div>
      <% end %>
    </div> <!-- well -->
  </div> <!-- レビュー入力フォーム -->
</div>  <!-- レビュー -->

<%= debug(params) if Rails.env.development? %>
