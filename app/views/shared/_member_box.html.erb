<div class="row">
  <div class="col-sm-12">
    <div class="thumbnail">
      <% if link == true && member.guide.present?%>
        <%= link_to(member_image_tag(member),guide_detail_path(member.guide)) %>
      <% else %>
        <%=member_image_tag(member) %>
      <% end %>
      <div class="caption">
        <h3><%= member.first_name + "  " + member.last_name%></h3>
      </div>
    </div>
  </div>
</div>