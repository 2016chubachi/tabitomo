<%= render "tab" %>

<div class="row"> <!-- row -->
  <div class="col-xs-12 col-sm-3"> <!-- col-xs-12 col-sm-3 -->
    <%= render "thumbnail" , booking: @booking%>
  </div> <!-- col-xs-12 col-sm-3 -->
  <div class="col-xs-12 col-sm-9"> <!-- col-xs-12 col-sm-9 -->
    <%#= binding.pry %>
    <%= form_for(@booking, url: guide_booking_path(@booking), html: { class: "form-horizontal"}) do |f| %>
      <%= render "table", booking: @booking %>
      <%= render "form", f: f %>

      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9 text-right">
          <%= f.submit "承認", :name => "approve", class: "btn btn-primary" %>
          <%= f.submit "却下", :name => "cancel", class: "btn btn-primary" %>
        </div>
      </div>

    <% end %>
  </div><!-- col-xs-12 col-sm-9 -->
</div> <!-- row -->

<%= debug(params) if Rails.env.development? %>
